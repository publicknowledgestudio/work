rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Only authenticated users from publicknowledge.co can read/write
    function isAuthenticated() {
      return request.auth != null;
    }

    function isTeamMember() {
      return isAuthenticated() &&
        request.auth.token.email.matches('.*@publicknowledge[.]co$');
    }

    // Tasks collection
    match /tasks/{taskId} {
      allow read: if isTeamMember();
      allow create: if isTeamMember();
      allow update: if isTeamMember();
      allow delete: if isTeamMember();
    }

    // Standups collection
    match /standups/{standupId} {
      allow read: if isTeamMember();
      allow create: if isTeamMember();
      allow update: if isTeamMember() &&
        resource.data.userEmail == request.auth.token.email;
    }

    // Sprints collection
    match /sprints/{sprintId} {
      allow read: if isTeamMember();
      allow write: if isTeamMember();
    }

    // Clients collection
    match /clients/{clientId} {
      allow read: if isTeamMember();
      allow write: if isTeamMember();
    }

    // Projects collection
    match /projects/{projectId} {
      allow read: if isTeamMember();
      allow write: if isTeamMember();
    }

    // People collection
    match /people/{personId} {
      allow read: if isTeamMember();
      allow write: if isTeamMember();
    }

    // Notes collection (for Granola notes etc)
    match /notes/{noteId} {
      allow read: if isTeamMember();
      allow write: if isTeamMember();
    }

    // Daily focus (per-user daily task curation)
    match /dailyFocus/{docId} {
      allow read: if isTeamMember();
      allow create: if isTeamMember();
      allow update: if isTeamMember() &&
        resource.data.userEmail == request.auth.token.email;
    }

    // User profiles (photos, display names)
    match /users/{email} {
      allow read: if isTeamMember();
      allow write: if isTeamMember() &&
        request.auth.token.email == email;
    }
  }
}
